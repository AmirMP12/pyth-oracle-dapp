  },
  "subscriptions": [
    {
      "id": "contract-event-monitoring",
      "contractAddress": [
        "0x1234567890123456789012345678901234567890",
        "0x2ed3dddae5b2f321af0806181fbfa6d049be47d8"
      ],
      "eventSignature": [
        "Deposit(address indexed dst, uint256 wad)",
        "Withdrawal(address indexed src, uint256 wad)",

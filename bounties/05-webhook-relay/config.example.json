          "headers": {
            "Authorization": "Bearer your-token-here",
            "Content-Type": "application/json"
          },
          "timeout": 30000,
          "retryAttempts": 3
        }
      ]
    }
  ],
  "walletMonitoring": [
    {
      "id": "wallet-transfers-monitoring",
      "walletAddresses": [
        "0x67e2c2e6186ae9Cc17798b5bD0c3c36Ef0209aC9"
      ],
      "webhooks": [
        {
          "id": "hookdeck-wallet-webhook",
          "url": "https://hkdk.events/m0t8gxe2jfe4j91",
          "format": "generic",
          "headers": {
            "Authorization": "Bearer your-token-here",
            "Content-Type": "application/json"
          },
          "timeout": 30000,
          "retryAttempts": 3
        }
      ]

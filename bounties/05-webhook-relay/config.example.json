      "filters": {
        "value": {
          "operator": "gt",
          "value": "1000000000000000000"
        }
      },
      "webhooks": [
        {
          "id": "hookdeck-contract-webhook",
          "url": "https://hkdk.events/m0t8gxe2jfe4j91",

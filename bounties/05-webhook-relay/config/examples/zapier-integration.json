{
  "network": {
    "rpcUrl": "https://evm.confluxrpc.com",
    "wsUrl": "wss://evm.confluxrpc.com/ws",
    "chainId": 1030,
    "confirmations": 1
  },
  "database": {
    "url": "postgresql://user:password@localhost:5432/webhook_relay",
    "poolSize": 20,
    "connectionTimeout": 10000
  },
  "subscriptions": [
    {
      "id": "token-transfers",
      "contractAddress": "0x14b2d3bc65e74dae1030eafd8ac30c533c976a9b",
      "eventSignature": "Transfer(address,address,uint256)",
      "filters": {
        "value": {
          "operator": "gt",
          "value": "1000000000000000000"
        }
      },
      "webhooks": [
        {
          "id": "zapier-large-transfers",
          "url": "https://hooks.zapier.com/hooks/catch/123456/large-transfers/",
          "format": "zapier",
          "headers": {
            "Content-Type": "application/json",
            "X-Zapier-Source": "conflux-webhook-relay"
          },
          "timeout": 30000,
          "retryAttempts": 3
        }
      ]
    },
    {
      "id": "nft-mints",
      "contractAddress": "0x1234567890123456789012345678901234567890",
      "eventSignature": "Transfer(address,address,uint256)",
      "filters": {
        "from": "0x0000000000000000000000000000000000000000"
      },
      "webhooks": [
        {
          "id": "zapier-nft-mints",
          "url": "https://hooks.zapier.com/hooks/catch/123456/nft-mints/",
          "format": "zapier",
          "headers": {
            "Content-Type": "application/json"
          },
          "timeout": 30000,
          "retryAttempts": 3
        }
      ]
    }
  ],
  "monitoring": {
    "logLevel": "info",
    "metricsEnabled": true,
    "healthCheckPort": 3001
  },
  "options": {
    "maxConcurrentWebhooks": 15,
    "defaultRetryAttempts": 3,
    "defaultRetryDelay": 5000,
    "webhookTimeout": 30000,
    "queueProcessingInterval": 1000
  }
}
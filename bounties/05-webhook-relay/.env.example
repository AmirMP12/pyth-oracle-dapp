# Environment Configuration Template for Webhook Relay System
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=production
CONFIG_PATH=/app/config.json

# Database Configuration
DATABASE_URL=postgresql://webhook_user:webhook_pass@postgres:5432/webhook_relay
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_KEY_PREFIX=webhook-relay:
REDIS_TTL=3600

# Blockchain Network Configuration
CONFLUX_RPC_URL=https://evm.confluxrpc.com
CONFLUX_WS_URL=wss://evm.confluxrpc.com/ws
CONFLUX_CHAIN_ID=1030
CONFLUX_CONFIRMATIONS=12

# Monitoring Configuration
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_PORT=3001

# Webhook Configuration
MAX_CONCURRENT_WEBHOOKS=10
DEFAULT_RETRY_ATTEMPTS=3
DEFAULT_RETRY_DELAY=1000
WEBHOOK_TIMEOUT=30000
QUEUE_PROCESSING_INTERVAL=5000

# Security Configuration (for production)
# JWT_SECRET=your-jwt-secret-here
# API_KEY=your-api-key-here

# Optional: External Service Configuration
# ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-hook-id/
# MAKE_WEBHOOK_URL=https://hook.integromat.com/your-webhook-id
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
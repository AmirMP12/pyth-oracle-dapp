{
  "name": "webhook-relay-system",
  "version": "1.0.0",
  "description": "A backend service that monitors Conflux eSpace blockchain events and delivers real-time notifications via webhooks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --selectProjects unit integration e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:performance": "jest --selectProjects performance",
    "test:all": "jest --selectProjects unit integration e2e performance",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "ts-node scripts/migrate.ts",
    "migrate:up": "ts-node scripts/migrate.ts up",
    "migrate:down": "ts-node scripts/migrate.ts down",
    "migrate:status": "ts-node scripts/migrate.ts status",
    "docker:build": "docker compose build --no-cache webhook-relay",
    "docker:up": "docker compose --profile tools --profile monitoring up -d",
    "docker:down": "docker compose --profile tools --profile monitoring down",
    "docker:logs": "docker compose logs -f webhook-relay",
    "docker:test": "./scripts/test-deployment.sh",
    "docker:dev": "docker compose --profile tools --profile monitoring -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose --profile tools --profile monitoring -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f webhook-relay-dev",
    "docker:dev:health": "curl -s http://127.0.0.1:3002/health | jq .",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "test:setup": "./scripts/setup-test-db.sh",
    "test:integration:setup": "./scripts/setup-test-db.sh && npm run test:integration",
    "test:metrics-db": "ts-node scripts/test-metrics-database.ts",
    "test:metrics-db:unit": "jest src/monitoring/__tests__/MetricsCollector.database.test.ts",
    "test:metrics-db:integration": "jest tests/integration/metrics-database.test.ts",
    "demo:deliveries-metrics": "ts-node scripts/demo-deliveries-metrics.ts"
  },
  "keywords": [
    "blockchain",
    "webhook",
    "conflux",
    "automation",
    "events"
  ],
  "author": "aiqubit@hotmail.com",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "ethers": "^6.8.0",
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  }
}
